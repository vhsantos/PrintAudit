# Example PrintAudit configuration (install to /etc/printaudit/printaudit.conf)

[core]
page_log_path=/var/log/cups/page_log
work_start=7
work_end=22
enabled_sections=queue,queue_user,user,temporal,job,cost
outputs=cli,csv,html,email
cli_mode=rich
cli_max_rows=15
csv_dir=/var/spool/printaudit/reports
html_path=/var/spool/printaudit/reports/printaudit.html
html_use_chartjs=false

[email]
enabled=false
smtp_host=localhost
smtp_port=25
smtp_user=
smtp_password=
use_tls=false
recipients=
subject=PrintAudit Report
from=
attach_csv=true
attach_html=true

[costs]
# Basic cost settings (unitless numbers, interpreted as your local currency)
default=0.0
currency_symbol=
currency_code=

# Printer-specific rates (optional)
# printer.MP_301=0.01
# printer.HP_2000=0.05

# Cost-label specific rates (optional)
# label.contabilidad=0.03
# label.marketing=0.05
# label.IT=0.04

[cost_rules]
# Map jobs to cost labels based on printer/user/job/host substrings.
# contabilidad=contabilidad1,contabilidad2,contabilidad3,contabilidad4,contabilidad6
# caja=csalas
